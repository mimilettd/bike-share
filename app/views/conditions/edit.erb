
<h1>Edit Condition from <%= @condition.date %>:</h1>

<form action="/conditions" method="post">
  <label for="">Date</label>
  <input type="textfield" name="condition[date]" value="<%= @condition.date %>">
  <label for="">Max Temperature</label>
  <input type="textfield" name="condition[max_temperature]" value="<%= @condition.max_temperature %>">
  <label for="">Mean Temperature</label>
  <input type="textfield" name="condition[mean_temperature]" value="<%= @condition.mean_temperature %>">
  <label for="">Min Temperature</label>
  <input type="textfield" name="condition[min_temperature]" value="<%= @condition.min_temperature %>">
  <label for="">Mean Humidity</label>
  <input type="textfield" name="condition[mean_humidity]" value="<%= @condition.mean_humidity %>">
  <label for="">Mean Visibility</label>
  <input type="textfield" name="condition[mean_visibility]" value="<%= @condition.mean_visibility %>">
  <label for="">Mean Windspeed</label>
  <input type="textfield" name="condition[mean_windspeed]" value="<%= @condition.mean_windspeed %>">
  <label for="">Precipitation</label>
  <input type="textfield" name="condition[precipitation]" value="<%= @condition.precipitation %>">
  <input type="submit" value="Update Condition" />
</form>
